<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/round_refreshing"
    android:padding="20dp"
    android:layout_centerInParent="true">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDialog"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="#6c5ddc"
        android:visibility="gone"
        android:layout_marginEnd="16dp"/>


    <TextView
        android:id="@+id/textDialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#6c5ddc"
        android:textStyle="bold"
        android:text="Refreshing Data"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/imageDialog"/>

    <TextView
        android:id="@+id/textDialog1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please wait!"
        android:textColor="#6c5ddc"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/textDialog"
        android:layout_toEndOf="@+id/imageDialog"
        android:layout_marginEnd="18dp"/>

</RelativeLayout>