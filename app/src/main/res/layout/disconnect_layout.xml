<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/gradiantback"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiantback"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_disconnected"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fitsSystemWindows="true"
            android:showAsAction="always"
            app:contentInsetLeft="0dp"
            android:background="#3c4767"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/toolbar_back_button"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    android:backgroundTint="@color/black"
                    app:srcCompat="@drawable/ic_arrow_back" />

                <TextView
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="55dp"
                    android:layout_toEndOf="@id/toolbar_back_button"
                    android:text="@string/vpn_usage_report"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp" />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_rate"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/f_0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/circleView_disconnect"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/disconnected_county"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/circleView_disconnect"
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_country"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/circleView_disconnect"
                    android:maxWidth="55dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/duration_heading_disconnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:drawablePadding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="19dp"

                    android:layout_alignParentStart="true"
                    android:drawableLeft="@drawable/ic_baseline_access_time_24"
                    android:textColor="#000"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/Duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="53dp"
                    android:layout_toEndOf="@id/duration_heading_disconnect"
                    android:text="00:00:01"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/duration_heading_disconnect" />
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_margin="10dp"
android:background="@drawable/shape_rate">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/Rate"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/Rate2"
                    android:textColor="#97a2ad"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/star_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star" /> <ImageView
                        android:id="@+id/star_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star"/> <ImageView
                        android:id="@+id/star_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star"/> <ImageView

                        android:id="@+id/star_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star"/> <ImageView
                        android:id="@+id/star_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/star"/>




                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:layout_height="120dp"
            android:visibility="gone"
            android:background="@drawable/shape_rounded_light_grey_bg">

            <TextView
                android:id="@+id/download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/middle_bold"
                android:textColor="@color/colorWhite"
                android:text="Avg Download Speed"/>

            <View
                android:id="@+id/view_hor"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="@color/app_background"/>

            <View
                android:id="@+id/view_ver"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:background="@color/app_background"/>

            <TextView
                android:id="@+id/upload_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/middle_bold"
                android:paddingHorizontal="20dp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:text="@string/avg_upload_speed"/>

            <TextView
                android:id="@+id/disconnected_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="5.82 MB"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="30dp"
                android:fontFamily="@font/middle_bold"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:id="@+id/disconnected_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="30dp"
                android:gravity="center"
                android:text="460 MB"
                android:fontFamily="@font/middle_bold"
                android:textColor="#fff"
                android:textSize="20sp" />

        </RelativeLayout>
        <androidx.cardview.widget.CardView

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginHorizontal="10dp"
              android:layout_marginTop="25dp"
            app:cardBackgroundColor="@color/colorWhite"

              android:layout_margin="10dp">
        <FrameLayout
            android:id="@+id/connection_ad_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        </FrameLayout>
</androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"> <RelativeLayout
                android:id="@+id/adMobView_disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10dp"
                android:gravity="center"/>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>

